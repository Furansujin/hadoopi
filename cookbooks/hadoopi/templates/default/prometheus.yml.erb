global:
  scrape_interval: 20s
  evaluation_interval: 20s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9091']

  - job_name: 'mysql'
    static_configs:
      - targets: ['master01:9104']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['master01:9100','master02:9100','worker01:9100','worker02:9100','worker03:9100']

  - job_name: 'hadoopprocesses'
    static_configs:
      - targets: ['master01:9256','master02:9256']

