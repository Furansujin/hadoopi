global:
  scrape_interval: 20s
  evaluation_interval: 20s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9091']

  - job_name: 'mysql'
    static_configs:
      - targets: ['master01:9104']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['master01:9100','master02:9100','worker01:9100','worker02:9100','worker03:9100']

  - job_name: 'hadoopprocesses'
    static_configs:
      - targets: ['master01:9256','master02:9256']

  - job_name: 'namenode'
    static_configs:
      - targets: ['master01:20070']

  - job_name: 'datanode'
    static_configs:
      - targets: ['worker01:20075','worker02:20075','worker03:20075']

  - job_name: 'resourcemanager'
    static_configs:
      - targets: ['master01:28050']

  - job_name: 'nodemanager'
    static_configs:
      - targets: ['worker01:28040','worker02:28040','worker03:28040']

  - job_name: 'jobhistoryserver'
    static_configs:
      - targets: ['master01:29888']

  - job_name: 'secondarynamenode'
    static_configs:
      - targets: ['master01:20090']

  - job_name: 'hbasemaster'
    static_configs:
      - targets: ['master02:26010']

  - job_name: 'hbasethrift'
    static_configs:
      - targets: ['master02:29095']
